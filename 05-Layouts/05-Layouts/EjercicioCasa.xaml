                <ListViewItem>FernandoGaliana</ListViewItem>
            </ListView.Items>
        </ListView>

        <AppBarButton Icon="Add" RelativePanel.Above="stackPanelMoverPagina" RelativePanel.AlignRightWith="stackPanelBotones"/>


        <StackPanel Name="stackPanelMoverPagina" HorizontalAlignment="Center" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWith="lista" RelativePanel.AlignLeftWith="lista" Orientation="Horizontal">
            <AppBarButton Icon="Back"></AppBarButton>
            <AppBarButton Icon="Forward"></AppBarButton>
